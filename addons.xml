<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
    <addon id="plugin.video.GoldVault"
           name="GoldVault Live TV"
           version="1.0.0" 
           provider-name="Your Name/GoldVault Team">
        <requires>
            <import addon="xbmc.python" version="3.0.0"/>
            <import addon="script.module.requests"/>
        </requires>
        <extension point="xbmc.python.pluginsource" library="main.py">
            <provides>video</provides>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary lang="en">Live TV streaming from GoldVault.</summary>
            <description lang="en">Access various live TV channels easily.</description>
            <disclaimer lang="en"></disclaimer>
            <platform>all</platform>
            <assets>
                <icon>icon.png</icon>
                <fanart>fanart.jpg</fanart>
            </assets>
        </extension>
    </addon>
</addons>